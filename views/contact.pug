extends ./basic.pug

block style 
    style 
        include ../static/css/contact.css

block content
        .container 
            h1(class="h1") Contact Us
            form(action='/contact' method="post")
                .conform 
                    label(for='email') 
                        b Email

                    input(type='email' name='email'  placeholder='Enter Your Email' id="email" oninvalid="Invalidmail();" 
                        oninput="Invalidmail();" required)

                    label(for='number') 
                        b Phone

                    input(type='number' name='number' id="number" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);Invalidnumber();" maxlength="11" pattern="[0-9]{10}" title="Must contain 0-9 digits only and 11 digits long"  placeholder='Enter Your Phone Number' oninvalid="Invalidnumber();" required)
                    
                    label(for='name') 
                        b Title 

                    input(type='text' id="title" name='name' placeholder='Enter Your Title' oninvalid="Invalidtitle();" oninput="Invalidtitle();" required)

                    label(for='desc') 
                        b Description
                        
                    textarea(name='desc' type="text" id="desc" placeholder='Type Your Message' oninvalid="Invalidmess();" oninput="Invalidmess();" required)

                    button(type="submit" class="button") Submit

    
        h1( class="h11") Follow Us
        .foll 
            a(href='//www.facebook.com') 
            img(src='/static/images/facebook.png' style="margin-left:12px;height:42px")
            a(href='https://www.instagram.com/')
            img(src='/static/images/instagram.png' style="margin-left:12px;height:42px" )
            a(href='https://www.linkedin.com/')
            img(src='/static/images/linkedin.png' style="margin-left:12px;height:42px")
    
        script(src="../static/script/contact.js")
   
         