extends ./basic.pug

block style 
    style 
        include ../static/css/contact.css

block content
        .container 
            h1(class="h1") Contact Us
            form(action='/contact' method="post")
                .conform 
                    label(for='email') 
                        b.cu2 Email
                        input(type='email' name='email'  placeholder='Enter Your Email' id="email" oninvalid="Invalidmail();" oninput="Invalidmail();" required)

                    //- label(for='number') 
                    //- b.cu3 Phone
                    //- input(type='number' name='number' id="number" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);Invalidnumber();" maxlength="11" pattern="[0-9]{10}" title="Must contain 0-9 digits only and 11 digits long"  placeholder='Enter Your Phone Number' oninvalid="Invalidnumber();" required)
                    
                    label(for='title') 
                        b.cu1 Subject
                        input(type='text' id="title" name='subject' placeholder='Enter Subject' oninvalid="Invalidtitle();" oninput="Invalidtitle();" required)

                    label(for='desc') 
                        b.cu4 Description
                        textarea(name='desc' type="text" id="desc" placeholder='Type Your Message' oninvalid="Invalidmess();" oninput="Invalidmess();" required)

                    button(type="submit" class="button") Submit
        h1( class="h11") Follow Us
