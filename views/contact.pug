extends basic.pug

block style 
    style 
        include ../static/css/contact.css

block content
    form(action='/contact' method="post")
    .container 
        h1 Contact Us
        label(for='name') 
        b.cu1 Username
        input(type='text' name='name' placeholder='Enter your username')

        label(for='email') 
        b.cu2 Email
        input(type='email' name='email' placeholder='Enter your email' id="email")

        label(for='number') 
        b.cu3 Phone
        input(type='text' name='number' placeholder='Enter your phone number')
        
        label(for='desc') 
        b.cu4 Description
        textarea(name='desc' placeholder='Type your message' )

        input(type="button", value="Submit")
    h1(style="margin:40px") Follow Us
    .foll 
        a(href='//www.facebook.com') 
         img(src='/static/images/facebook.png' style="margin-left:12px;height:42px")
        a(href='https://www.instagram.com/')
         img(src='/static/images/instagram.png' style="margin-left:12px;height:42px" )
        a(href='https://www.linkedin.com/')
         img(src='/static/images/linkedin.png' style="margin-left:12px;height:42px")
         