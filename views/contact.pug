extends basic.pug

block style 
    style 
        include ../static/css/contact.css

block content
    form(action='/contact' method="post")
        .container 
            h1(class="h1") Contact Us
            label(for='name') 
            b.cu1 Username
            input(type='text' name='name' placeholder='Enter your username' oninvalid="Invalidname(this);" required)

            label(for='email') 
            b.cu2 Email
            input(type='email' name='email' placeholder='Enter your email' id="email" oninvalid="Invalidmail(this);" required)

            label(for='number') 
            b.cu3 Phone
            input(type='number' name='number' placeholder='Enter your phone number' oninvalid="Invalidnumber(this);" required)
            
            label(for='desc') 
            b.cu4 Description
            textarea(name='desc' type="text" placeholder='Type your message' oninvalid="Invalidmess(this);" required)

            button(type="submit" class="button") Submit

    hr
    h1( class="h11") Follow Us
    .foll 
        a(href='//www.facebook.com') 
         img(src='/static/images/facebook.png' style="margin-left:12px;height:42px")
        a(href='https://www.instagram.com/')
         img(src='/static/images/instagram.png' style="margin-left:12px;height:42px" )
        a(href='https://www.linkedin.com/')
         img(src='/static/images/linkedin.png' style="margin-left:12px;height:42px")
    
    script(src="../static/script/contact.js")
   
         