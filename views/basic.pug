doctype html
html
  head
    meta(http-equiv='Cache-Control' content='no-cache, no-store, must-revalidate')
    meta(http-equiv='Pragma' content='no-cache')
    meta(http-equiv='Expires' content='0')
    title Needy 
    style 
        include ../static/css/navbar.css 
        include ../static/css/login.css 
    block style
    block scripts
      <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
      script(src="../static/script/navbar.js")  
  body
    nav.navbar
          div.start 
            | LOGO
          div.div#home #[a(href="/") Home] 
          div.div#category #[a(href="/") Recommandation] 
          div.div#category #[a(href="/createpost") Createpost] 
          div.div#myActivity #[a(href="/myactivity") My Activity ]
          div.div#contactUs #[a(href="/contact") Contact Us ]
          div.div#aboutUs #[a(href="/") About Us]
          div.last 
            if(isLoggedIn)
              button.btn#logoutbtn #[a(href="/logout") Logout]
              button.btn#profilebtn #[a(href="/profile") MyProfile] 
            else   
              button.btn#myBtn Login
            //-   button.btn#Singupbtn #[a(href="/signup") Signup]
    #myModal.modal
        .modal-content
            .modal-header
                span.close &times;
                h1(style="justify-content: center;display: flex;") Login
            .modal-body
                form(action="/login" method="Post" class="loginform" )
                    label(for='email')
                        .img1
                            img(src="../static/images/email.webp" style="margin:-1px;")
                            b(style="margin:5px") Email
                        input(type='email' placeholder='Enter your email' name='email' )
                    label(for='password')
                        .img1
                            img(src="../static/images/password.png" )
                            b(style="margin:5px") Password
                        input(type='password' placeholder='Enter your password' name='password')
                    button(type='submit' class="btn1") Login 
            
    div#snackbar Your like added to this post.
      
    script(src="../static/script/login.js")
